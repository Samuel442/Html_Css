<!--Para cada erro ele printará o texto vindo lá da validação-->
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<!--Fim da parte do print dos erros-->

<h3>Nova categoria</h3>
<div class="card">
    <div class="card-body">
    <!--Formulário para adição de categorias-->
    <form action="/admin/categorias/nova" method="POST">
        <label form="nome">Nome: </label>
        <input type="text" id="nome" name="nome" placeholder="Nome de categorias" class="form-control">
        <label form="slug">Slug: </label>
        <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control">
        <br>
        <button type="submit" class="btn btn-success">Criar categoria</button>
    </form>
    </div>
</div>